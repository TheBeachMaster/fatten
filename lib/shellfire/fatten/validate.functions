core_usesIn core validate

fatten_validate_repositoryPath()
{
	core_validate_folderPathReadableAndSearchable "$@"

	local code=$1
	local category="$2"
	local name="$3"
	local value="$4"
	
	if [ ! -e "$value"/.git ]; then
		core_validate_exit "The $category '$name' specifies a path '$value' which is not a git repository"
	fi
}
